{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Generate",
            "port": 9222,
            "url": "file:///${workspaceFolder}/generator/generate.html",
            "webRoot": "${workspaceFolder}/generator"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Generate",
            "file": "${workspaceFolder}/generator/generate.html",
            "userDataDir": false
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Output",
            "port": 9222,
            "url": "file:///${workspaceFolder}/generator/output.html",
            "webRoot": "${workspaceFolder}/generator"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Update icons no dl no transform",
            "program": "${workspaceFolder}/tools/update-icons-no-dl-no-transform.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Update icons no dl",
            "program": "${workspaceFolder}/tools/update-icons-no-dl.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Update icons",
            "program": "${workspaceFolder}/tools/update-icons.js"
        }
    ]
}